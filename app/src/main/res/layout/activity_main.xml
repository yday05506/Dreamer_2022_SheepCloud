<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 7월 달의 꿈 -->
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/text"/>

    <!-- 깃털 1 -->
    <View
        android:id="@+id/feather_1"
        android:layout_width="307dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/image_6" />

    <!-- 깃털 2 -->
    <View
        android:id="@+id/feather_2"
        android:layout_width="256dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/image_4"
        />

    <!-- 깃털 3 -->

    <!-- nav 바 -->
    <View
        android:id="@+id/feather_3"
        android:layout_width="307dp"
        android:layout_height="136dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/image_5" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:src="@drawable/nav_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:src="@drawable/plus"
            android:layout_marginBottom="5dp"
            />

    </FrameLayout>




</LinearLayout>